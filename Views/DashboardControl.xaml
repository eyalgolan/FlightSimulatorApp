<UserControl x:Class="FlightSimulatorApp.Views.DashboardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="White" BorderBrush="Black" BorderThickness="2" CornerRadius="10" Padding="4" Margin="10" Height="175" VerticalAlignment="Top">
        <Grid TextBlock.FontSize="12" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="4" Margin="3" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="FLIGHT DATA"></TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="0" Margin="3" HorizontalAlignment="Left" TextWrapping="Wrap" Text="VERTICAL_SPEED" VerticalAlignment="Top"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Padding="3" Margin="3" HorizontalAlignment="Left" TextWrapping="Wrap" Text="PITCH" VerticalAlignment="Top"/>
        <TextBlock Grid.Row="3" Grid.Column="0" Padding="3" Margin="3" HorizontalAlignment="Left" TextWrapping="Wrap" Text="GROUND_SPEED" VerticalAlignment="Top"/>
        <TextBlock Grid.Row="4" Grid.Column="0" Padding="3" Margin="3" HorizontalAlignment="Left" TextWrapping="Wrap" Text="HEADING" VerticalAlignment="Top"/>
        <TextBlock Grid.Row="1" Grid.Column="2" Padding="3" Margin="3" HorizontalAlignment="Left" TextWrapping="Wrap" Text="ALTIMETER" VerticalAlignment="Top"/>
        <TextBlock Grid.Row="2" Grid.Column="2" Padding="3" Margin="3" HorizontalAlignment="Left" TextWrapping="Wrap" Text="ROLL" VerticalAlignment="Top"/>
        <TextBlock Grid.Row="3" Grid.Column="2" Padding="3" Margin="3" HorizontalAlignment="Left" TextWrapping="Wrap" Text="ALTITUDE" VerticalAlignment="Top"/>
        <TextBlock Grid.Row="4" Grid.Column="2" Padding="3" Margin="3" HorizontalAlignment="Left" TextWrapping="Wrap" Text="AIR_SPEED" VerticalAlignment="Top"/>

        <TextBlock Grid.Row="1" Grid.Column="1" Margin="3" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding VM_VERTICAL_SPEED}" VerticalAlignment="Top"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Padding="3" Margin="3" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding VM_VERTICAL_SPEED}" VerticalAlignment="Top"/>
        <TextBlock Grid.Row="3" Grid.Column="1" Padding="3" Margin="3" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding VM_GROUND_SPEED}" VerticalAlignment="Top"/>
        <TextBlock Grid.Row="4" Grid.Column="1" Padding="3" Margin="3" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding VM_HEADING}" VerticalAlignment="Top"/>
        <TextBlock Grid.Row="1" Grid.Column="3" Padding="3" Margin="3" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding VM_ALTIMETER}" VerticalAlignment="Top"/>
        <TextBlock Grid.Row="2" Grid.Column="3" Padding="3" Margin="3" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding VM_ROLL}" VerticalAlignment="Top"/>
        <TextBlock Grid.Row="3" Grid.Column="3" Padding="3" Margin="3" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding VM_ALTITUDE}" VerticalAlignment="Top"/>
        <TextBlock Grid.Row="4" Grid.Column="3" Padding="3" Margin="3" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding VM_AIR_SPEED}" VerticalAlignment="Top"/>
    </Grid>
    </Border>
</UserControl>
